pipeline{
    agent any
    stages{
        stage("cloning from github"){
            steps{
                script{
                    echo 'cloning the github repo to jenkins'
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/abhikunwar/abhi-mlops.git']])

                }
            }
        }
        stage('creating environment and activating the environment'){
            steps{
            script{
                echo 'creating environment and activating the environment'
                sh '''
                python -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -e .
                echo 'environment created and package installed'
                pip list
                '''
            }
            }
        }

        }
    }
